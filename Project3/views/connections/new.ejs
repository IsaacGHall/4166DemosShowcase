<%- include('../partials/header.ejs')%>

  <div class="inputs">
    <form action = '/connections' method = 'POST'>
    <table>
      <tr>
          <td><label for="author">Author</label></td>
          <td><input type="text" id="author" name="author" class = "fixed-width"></td>
      </tr>
      <tr>
          <td><label for="title">Title</label></td>
          <td><input type="text" id="title" name="title" class = "fixed-width" required></td>
      </tr>
      <tr>
        <td><label for="category">Category</label></td>
        <td><input type="text" id="category" name="category" class = "fixed-width" required></td>
    </tr>
      <tr>
          <td class = "align-top"><label for="content">Content</label></td>
          <td><textarea rows = "5" id="content" name="content" class = "fixed-width" required></textarea></td>
      </tr>
      <tr>
        <td><label for="details">Details</label></td>
        <td><input type="text" id="details" name="details" placeholder="Release Date, Programmed in what language, etc." class = "fixed-width" required></td>
    </tr>
      <tr>
        <td><label for="location">Location</label></td>
        <td><input type = "text" id="location" name="location" placeholder="City, State, Country" class = "fixed-width" required></td>
      </tr>
      <tr>
        <tr>
          <td><label for="starttime">Start Time</label></td>
          <td><input type = "text" id="startTime" name="startTime" placeholder="Start Time" class = "fixed-width" required></td>
        </tr>
        <tr>
          <tr>
            <td><label for="endtime">End Time</label></td>
            <td><input type = "text" id="endTime" name="endTime" placeholder="End Time" class = "fixed-width" required></td>
          </tr>
      <tr>
          <td colspan = "2" class = "align-right"><button>Submit</button></td>
      </tr>
  </table>
</form>
  </div>

  <%- include('../partials/footer.ejs')%>