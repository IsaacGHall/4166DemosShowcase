<%- include('../partials/header.ejs')%>

  <div class="inputs">
    <!-- <Lijuan Cao> (unknown) <edit.ejs> (1.0.0) [HTML/ExpressJS].-->
    <form method = "POST" action = "/connections/<%=connection.id%>?_method=PUT">
    <table>
      <tr>
          <td><label for="title">Title</label></td>
          <td><input type="text" id="title" name="title" value="<%= connection.title%>" class = "fixed-width"></td>
      </tr>
      <tr>
        <td><label for="category">Category</label></td>
        <td><input type="text" id="category" name="category" value="<%= connection.category%>" class = "fixed-width"></td>
    </tr>
      <tr>
          <td class = "align-top"><label for="content">Content</label></td>
          <td><textarea rows = "6" id="content" name="content" class = "fixed-width"><%= connection.content%></textarea></td>
      </tr>
      <tr>
        <td class = "align-top"><label for="details">Details</label></td>
        <td><textarea rows = "6" id="details" name="details" class = "fixed-width"><%= connection.details%></textarea></td>
    </tr>
        <tr>  <td class = "align-top"><label for="location">Location</label></td>
          <td><input type="text" id="location" name="location" class = "fixed-width" value="<%= connection.location%>"></td></tr>
      <tr>

        <tr>  <td class = "align-top"><label for="location">Start Time</label></td>
          <td><input type="text" id="startTime" name="startTime" class = "fixed-width" value="<%= connection.startTime%>"></td></tr>
      <tr>

        <tr>  <td class = "align-top"><label for="location">End Time</label></td>
          <td><input type="text" id="endTime" name="endTime" class = "fixed-width" value="<%= connection.endTime%>"></td></tr>
      <tr>
          <td colspan = "3" class = "align-right"><button>Submit</button></td>
      </tr>
  </table>
</form>
  </div>

  <%- include('../partials/footer.ejs')%>